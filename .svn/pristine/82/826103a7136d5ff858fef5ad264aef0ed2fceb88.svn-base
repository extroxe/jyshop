header {
    margin-top: 44px;
    z-index: 2;
}

header .titlebar {
    padding: 10px 0;
    background-color: #FFFFFF;
}

header .titlebar > form {
    border-radius: 5px;
    background-color: #FFFFFF;
    border-color: #F2F2F2;
    margin: 0 20px 0 20px;
}

/*顶部*/
.top_title{background-color: #117d94;position: absolute;top: 0; width: 100%}
.top_title h1{text-align: center; color: #fff}

/*下拉菜单*/
details .underline{position: relative;}
details .underline p{position: absolute;top: -27px;right: 5px;width: 15px;height: 15px;}
details .timeline{padding: 0; margin: 0}
details .timeline{padding: 0; margin: 0}
details .timeline .table-box{
    border: solid #ddd;
    border-width: 0 0 1px;
}
.tab{
    padding:0 2px;}


/*限时折扣*/
body{background-color: #fff}
#page-content .discount{
}
.discount p{
    line-height: 25px;
    border-bottom: 1px solid #ccc;
    color: #117d94;
}
.discount p span{
    font-size: 18px;
    margin-right: 5px;
    line-height: 25px;
}
.discount ul.grid{    margin-top: 20px;}
.discount ul.grid li{
    width: 33.33%;
    /*border-right: 1px solid #ccc;*/
}
.grid li .list{
    padding: 4px;
    background-color: #fff;
}
.grid li img{
    max-height: 199px;
    height: 199px;
    width: 100%;
    /*margin-bottom: 15px;*/
}
.grid li span{
    display: block;}
.grid li span:last-child{color: red; font-size: 10px; margin-top: 7px}


/*导航*/
#page-content {
    padding-top: 90px;
}

#page-content #navbar ul{
    background-color: #fff;
    padding: 3px;
    margin-top: 10px;
    text-align: center;}
#page-content #navbar li{
    text-align: center;
    cursor: pointer;
    width: 15%;
    display: inline-block;
    height: 50px;
    vertical-align: middle;
}
#page-content #navbar li:last-child{
    height: 20px;
}

#navbar li span:nth-child(2){font-size: 13px; margin-top: 7px; color: #117d94}
#navbar li span:nth-child(1){
    display: block;
    font-size: 27px;
    margin: 0 auto;
}
#navbar li span:hover{color: red}

.slider-container div {
    height: 200px;
}

/*导航*/
.table-box th, .table-box td{text-align: center; border-width: 0;width: 74px;display: inline-block}
.tabbar-line .tab.active,.tabbar-line .tab.active:after{color: #f6bf00}
.tabbar-line .tab.active:after{color: #f6bf00; background-color: #f6bf00}
.tabbar-line #icon_down{color: #fff}
.tabbar-line #icon_down.active:after{color: #fff}
.tabbar-line .tab:last-child.active:after{background-color: #fff}

.grid[data-col="2"] li:nth-child(even){padding-right: 4px}
.grid[data-col="2"] li:nth-child(odd){padding-left: 4px}

.commodity_lists li p{
    font-size: 13px;
    text-align: left;
    max-height: 35px;
    margin: 15px 0;
    padding: 0 4px;
    word-wrap: break-word;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 135px;
    overflow: hidden;
}
.commodity_lists li{padding: 8px 4px}
.commodity_lists li:nth-child(odd){padding-left: 4px}
.commodity_lists li:nth-child(even){padding-left: 4px}
.commodity_lists li div.lists_box{background-color: #f6f6f6; position:relative; padding-bottom: 8px}
.commodity_lists li span.price{
    text-align: left;
    margin-left: 4px;
    color: #f6bf00;
}
.commodity_lists li span.sales_volume{
    text-align: right;
    color: #999;
    position: absolute;
    margin-top: -20px;
    right: 4px;
    bottom: 8px;
}

.product_img span{width: 100%; display: inline-block; vertical-align: middle}
.product_img img{width: 100%; display: inline-block; vertical-align: middle}

/*首页通用*/
.topline:before, .underline:after, hr:after{height: 0}
.group:after, .group:before{height: 0}

@media(max-width: 375px){
    .table-box th, .table-box td{padding: 10px 4px; font-size: 13px;width:67px;}
}

@media(max-width: 320px){
    .table-box th, .table-box td{padding: 10px 4px; font-size: 13px;width:56px;}
    .tab-label{font-size: 13px}
}