#page-content #title{border-bottom: 1px solid #ccc; margin: 20px 0; padding: 10px 0px 0px}
#page-content #title li{display: inline-block;border-bottom:1px solid #117d94; width: 100px;  padding: 15px 0; text-align: center}
#page-content #title li p{color: #117d94; margin: 0}

table th{border-bottom: 2px solid #117d94}
table td:nth-child(1){text-align: left}
table td{text-align: center}

.item_list .cart_img{height: 60px; width: 56px; display: inline-block}
.item_list img{height: 60px; width: 56px;}
p{margin-bottom: 0px; font-size: 15px;}
.orderPay{padding-top: 10px}


#orderPayType li{list-style: none;
    border: 1px dashed transparent;
    width: 200px;
    display: inline-block;
    text-align: left;
    padding: 15px 10px;
    margin-top: 10px;
    margin-right: 10px;
    cursor: pointer;}
#orderPayType li:first-child{border-color: #117d94}
#orderPayType li:hover{border-color: #117d94}

#add_address{
    padding-right: 13px;
    margin-right: 10px;
}
#address-link{
    font-size: 13px;
    cursor: pointer;
    color: #117d94;

}

.address-bg {
    background: url('../img/add_02.png') no-repeat;
    cursor: pointer;
    padding-left: 13px;
    width: 237px;
    height: 105px;
    margin-bottom: 30px;
    overflow: hidden;
}

.order-address.selected .address-bg {
    background: url('../img/add_01.png') no-repeat;
}

.modal-backdrop, .modal-backdrop.fade.in {
    opacity: 0.1;
}

.modal{
    border-radius: 0;
    box-shadow: none;
    border: 1px solid #117d94;
    width:600px;
    margin-left: -350px;
}
#myModalLabel{
    font-family: '微软雅黑';
    font-size: 20px;
    margin: 10px;
}

.modal-body{max-height: 650px}

#address_modal{
    display: none;
}
#address_modal #receiving_info .border_radius{width: 534px; border-radius: 0}
#address_modal #receiving_info .input_text{border-radius: 0}
#address_modal #receiving_info label{color: #117d94}

#address_modal input[class = border_radius]{
    height: 30px;
}

#shop_detail span {
    display: inline-block;
    width: 100px;
    text-align: right;
}
