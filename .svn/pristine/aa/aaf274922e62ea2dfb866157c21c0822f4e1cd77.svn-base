#page-content #order_type{background-color: #f2f7ff; max-height: 300px; padding: 30px}
#order_type ul, #order_type li{width: 400px}
#order_type li label{display: inline-block; font-family: '微软雅黑'}
#order_type span.pay_money{float: right; margin-top: -40px}

#page-content div#weixin_code{border: 1px solid #aaa; width: 800px; padding: 30px 0;margin: 30px auto}
div#weixin_code img:first-child{margin: -150px 0 0 100px}
div#weixin_code img:last-child{margin: 100px auto}

/*logo*/
.nav-tabs>li>a{padding: 8px 52px}
#page-content div.logo{margin: 30px 0}
#page-content div.logo img{width:200px;}
#page-content div.logo span{font-size: 27px; margin-left: 10px; font-family: '黑体'}

/*扫码框*/
#page-content .tabbable{margin: 30px auto; width: 800px}
.tabbable .nav-tabs{margin-bottom: 0}
.tabbable .tab-content{border: 1px solid #ddd; border-top: none}
.tab-content #tab1{padding: 30px 0}
#tab1 .wePay_logo{position: absolute; margin-left: 35px; width: 110px}
#tab1 .code_box{margin: 60px 0 50px 260px; width: 301px; text-align: center}
#tab1 .code_box img:last-child{margin-top: 20px}

/*支付成功按钮*/
.pay-success{
    display: inline-block;
    margin-top: 26px;
    padding: 10px 20px;
    font-size: 18px;
    color: #fff;
    border-radius: 3px;
    cursor: pointer;
}