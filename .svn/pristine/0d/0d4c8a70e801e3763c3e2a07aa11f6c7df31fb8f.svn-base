body{
    background: url("../img/sign_in_bg.png") no-repeat;
    background-size: 100% 100%;
}

.group:before, .group:after{height: 0}

.group{
    text-align: center;
    margin: 0;
    background-color: transparent;
}

.logo{
    margin: 0 auto;
    width: 150px;
    margin-top: 100px;
    font-size: 30px;
    text-align: center;
    font-weight: normal;
    margin-bottom: 50px;
}
.inputbox{margin: 0 12px;}
.input-text{padding:12px}
button.checkcode{
    position: absolute;
    margin-top: 6px;
    right: 8px;
    width: 94px;
    border-radius: 5px;
    background-color: #ddd;
    height: 32px;
    color: #333;
    font-size: 13px;
}
.sendcode{padding:10px 12px; margin-top: 40px}
.button{background-color: #117d94}

.sign_in{}
.topline:before, .underline:after, hr:after{
    height: 0;
}
.button{
    height: 44px;
    width: 86%;
    border-radius: 22px;
    margin: 0 auto;

}

.inputbox{
    background-color: transparent;
    width: 80%;
    margin: 0 auto;
    margin-top: 20px;
}

.inputbox img{
    width: 34px;
    position: absolute;
    margin-left: 16px;
    margin-top: 7px;
}

.inputbox .input-text{
    padding-left: 61px;
    border-radius: 27px;
    background-color: rgba(0,0,0, 0.5);
    color: #eee;
}

#eye_kan{
    position: absolute;
    margin-top: 12px;
    right: 10px;
    font-size: 31px;
}
a.button{
    background: rgba(34, 172, 236, 0.7);
}

div#logo{
    margin: 60px 0 40px;
}

@media (max-width: 360px) {
    div#logo{
        margin: 20px 0 0px;
    }
}