body{background-color: #fff}
.group:before, .group:after{height:0}

.titlebar{background-color: #117d94}
.titlebar .order_detail{text-align: center; color: #eee; padding-right: 20px}

.order_title{position: relative;padding: 7px 20px;}
.order_title .order_num{color: #777;font-size: 16px;}
.order_title .done{position: absolute; right: 26px; color: #20aeff;}

.receiving{background-color: #f5f5f5}
.receiving_info{padding: 15px 20px}
.receiving_info .user_info{margin-bottom: 15px}
.receiving_info .user_info .tel{
    position: absolute;
    right: 26px; font-size: 14px
}
.receiving_info .user_addr img{
    width: 35px;
    display: inline-block;
}
.receiving_info .user_addr .addr_detail{
    display: inline-block;
    width: 84%;
    margin-left: 5px;
    font-size: 14px;
    margin-top: 5px;
}


/*商品图片信息*/
.card {
    padding-bottom: 30px;
    background-color: #f5f5f5;
    margin: 15px 0 8px 0;
}
.card .inputbox {display: flex}

.card > div,
.card .info-box > div {
    padding: 10px 20px;
    color: #666666;
}

.card > div:nth-child(2) {
    display: flex
}

.card .info-box .info-title {
    color: #333333;
    overflow: hidden;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    padding-bottom: 0;
    margin-bottom: 18px;
}

.card .info-box .info-price {
    color: #F6BF00;
    font-size: 24px;
}

.card img {
    width: 100px;
    height: 100px;
}

.card .info-box {
    display: inline-block;
    border-bottom: 1px solid #eee;
}
.card .inputbox{padding-top: 5px;}
.card .inputbox:last-child{
    padding: 5px 20px 0px;
}
.card .inputbox:last-child .info-box{
    border: none;
}
.card .inputbox:last-child .item-num{
    bottom:10px;
}

.card .item-num {
    position: absolute;
    right: 25px;
    bottom: 20px;
}

.card .inputbox .input-text{
    padding: 8px 12px;
}

.card .inputbox.message {
    padding: 10px 20px;
}

.card .item-span-right {
    position: absolute;
    right: 20px;
    top: 18px;
}

/*文字信息*/
.info_box{padding: 0 20px; margin: 0;}
.info_box .inputbox .inputbox-left{padding: 10px 0px;}

/*.commodity_info li{line-height: 25px}*/
.inputbox label,.commodity_info li label:first-child{
    color: #888;
}
.span_right span{
    position: absolute;
    right: 0;
    top:10px;
}
.info_box .commodity_info{text-align: right; padding: 12px 0px;border-bottom: 1px solid #eee;}
.info_box .commodity_info li label:last-child{
    min-width: 65px;}
.info_box .total_time{
    padding: 12px 0;
    text-align: right;
}
.info_box .total_time .total_head{
    font-size: 20px;
    color: #000;
    margin-right: 10px;
}
.info_box .total_time .total_price{
    font-size: 16px;
    color: #f6bf00;
}

/*底部按钮*/
.button_footer{
    padding: 12px 20px;
    background-color: #f5f5f5;
    margin: 0; text-align: right;
}
.button{
    background-color: #fff;
    height: 35px;
    border-radius: 2px;
}
.button_footer .review{
    color: #777;
    border: 1px solid #ddd;
}
.button_footer .buy_again{
    margin-left: 20px;
    color: #20aeff;
    border: 1px solid #20aeff;
}
.info_box .total_time label{color: #888}
li{line-height: 30px;}

/*适配性*/
@media(max-width: 320px){
    *{font-size: 14px}
    .card .info-box .info-price span{font-size: 18px}
}