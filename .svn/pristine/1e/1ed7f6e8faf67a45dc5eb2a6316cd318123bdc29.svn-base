        if (!empty($server_info)) {
            $user_info = $this -> jys_weixin -> get_user_info($server_info['access_token'], $server_info['openid']);
            if (!empty($user_info)) {
                if ($state == "user") {
                    // 普通用户
                    $result = $this -> User_model -> get_user_from_weixin($user_info);
                    if ($result) {
                        // 登录成功
                    }else {
                        // 当前系统没有该用户
                    }
                    header("Location:" . site_url('weixin'));
                }
            } else {
                //echo "获取用户信息失败";
