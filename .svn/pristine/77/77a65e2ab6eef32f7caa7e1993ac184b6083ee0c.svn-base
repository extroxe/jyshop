.post_bar .head{text-align: center;color: #fff;padding-right: 42px;}

.user-wrapper .header {
    position: relative;
    display: flex;
    padding: 15px;
    background: #fff;
    align-items: center;
}

.user-wrapper .header .avatar-wrapper {
    display: inline-block;
    flex: 0 0 60px;
    width: 60px;
    margin-right: 15px;
}

.user-wrapper .header .avatar-wrapper .avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
}

.user-wrapper .header .name {
    display: inline-block;
    margin: auto 0;
    line-height: 16px;
    font-size: 16px;
}

.user-wrapper .header .send-message {
    display: inline-block;
    margin-left: 10px;
}

.user-wrapper .header .send-message .send-btn i {
    transform: rotateY(180deg);
    margin-top: -3px;
}

.user-wrapper .header .send-message a {
    padding: 2px 10px;
    border-radius: 3px;
    color: #fff;
    background: #117D94;
}

.user-wrapper .nav-wrapper .tabbar {
    margin-top: 5px;
}

.user-wrapper .nav-wrapper .tabbar li {
    background: #fff;
}

.user-wrapper .post-content {
    padding: 10px 15px;
    background: #fff;
}

.user-wrapper .post-content .list-item{
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.user-wrapper .post-content .list-item .title {
    padding: 8px 0;
    line-height: 16px;
    font-size: 16px;
}

.user-wrapper .post-content .list-item .content {
    margin-top: 5px;
    line-height: 18px;
    font-size: 15px;
    color: rgba(7, 1, 27, 0.8);
}

.user-wrapper .post-content .list-item .info {
    margin-top: 15px;
    line-height: 13px;
    font-size: 13px;
    color: rgba(7, 1, 27, 0.5);
}

.user-wrapper .collect-content .bar,
.user-wrapper .focus-content .bar {
    background: #fff;
}

.user-wrapper .focus-content .bar .title,
.user-wrapper .focus-content .person .title{
    padding: 10px 5px;
    line-height: 15px;
    font-size: 15px;
    color: rgba(7, 17, 27, 0.6);
    background: #fafbfc;
    border-bottom: 1px solid rgba(7, 17, 27, 0.1);
}

.user-wrapper .collect-content .bar .bar-list,
.user-wrapper .focus-content .bar .bar-list {
    padding: 10px 5px;
    border-bottom: 1px solid rgba(7, 17, 27, 0.1);
}

.user-wrapper .collect-content .bar .bar-list .name,
.user-wrapper .focus-content .bar .bar-list .name {
    line-height: 16px;
    font-size: 16px;
}

.user-wrapper .collect-content .bar .bar-list .detail,
.user-wrapper .focus-content .bar .bar-list .detail {
    text-align: right;
    line-height: 13px;
    font-size: 13px;
    color: rgba(7, 17, 27, 0.5);
}

.user-wrapper .fans-content .person ul,
.user-wrapper .focus-content .person ul {
    font-size: 0;
}

.user-wrapper .fans-content .person .person-list,
.user-wrapper .focus-content .person .person-list {
    position: relative;
    display: inline-block;
    padding: 15px 0;
    box-sizing: border-box;
    width: 33.33%;
    background: #fff;
    border-bottom: 1px solid rgba(7, 17, 27, 0.1);
    border-right: 1px solid rgba(7, 17, 27, 0.1);
}

.user-wrapper .fans-content .person .person-list .avatar,
.user-wrapper .focus-content .person .person-list .avatar {
    width: 50px;
    height: 50px;
    margin: auto;
    margin-bottom: 10px;
}

.user-wrapper .fans-content .person .person-list .avatar img,
.user-wrapper .focus-content .person .person-list .avatar img {
    display: block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.user-wrapper .fans-content .person .person-list .name,
.user-wrapper .focus-content .person .person-list .name {
    line-height: 24px;
    font-size: 15px;
    text-align: center;
}

.dropload-load .loading {
    border-bottom-color: #666;
}

.loading:before, .loading:after {
    width: 0;
}

.no-content {
    width: 100%;
    padding: 20px 0;
    text-align: center;
    font-size: 14px;
    color: rgba(7, 17, 27, 0.6);
}