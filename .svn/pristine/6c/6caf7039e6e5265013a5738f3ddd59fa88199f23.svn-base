header .titlebar h1, header .titlebar i {
    color: #969696;
}

header .titlebar {
    padding: 10px 0;
    background-color: #FFFFFF;
}

header .titlebar > form {
    border-radius: 5px;
    background-color: #F2F2F2;
    border-color: #F2F2F2;
    margin: 0 30px 0 12px;
}

header + article {
    padding-top: 55px;
}

.info-screen {
    background-color: #FFFFFF;
    padding: 15px 0;
}

.info-screen > div {
    padding: 0 29px;
    display: inline-block;
}

.info-screen > div.active {
    color: #F6BF00;
}

.info-screen .triangle {
    display: inline-block;
    margin-top: 2px;
}

.info-screen .triangle > span {
    display: block;
    top: 3px;
}

.info-screen .triangle > span:nth-child(1){
    margin-bottom: 2px;
}

.info-screen .triangle .triangle-up.active {
    border-bottom: 6px solid #F6BF00;
}

.info-screen .triangle .triangle-down.active {
    border-top: 6px solid #F6BF00;
}

.triangle-up {
    position: relative;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-bottom: 6px solid #DADADA;
}

.triangle-down {
    position: relative;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #DADADA;
}

.card {
    margin: 0;
    background-color: #FFFFFF;
}

.card > div,
.card .info-box > div {
    padding: 10px;
    color: #666666;
}

.card .info-box .info-title {
    color: #333333;
    line-height: 16px;
    overflow: hidden;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    padding-bottom: 0;
    padding-top: 0;
}

.card .info-box .info-group {
    position: absolute;
    bottom: 0;
}

.card .info-box .info-price {
    color: #F6BF00;
    font-size: 18px;
}

.card .info-box .info-bottom {
    font-size: 12px;
    color: #666666;
}

.card img {
    width: 100px;
    height: 100px;
}


