.top{
    background-color: #ffbe04;
    padding-bottom: 1px;
}
.top .rotate{
    font-size: 32px;
    padding: 31px;
    text-align: center;
    color: #fff;
    padding-bottom: 0;
    margin: 0;
}
.top p:nth-child(2){
    display: block;
    width: 29%;
    margin: 17px auto;
    text-align: right;
    font-size: 20px;
    color: red;
}

/*转盘*/
.banner{width: 300px;margin-left: 20px}
.banner .turnplate{
    width: 300px;
    height: 300px;
    position: relative;
}
.banner .pointer{
    width: 30%;
    position: absolute;
    margin-top: -78%;
    right: 35%;
    cursor: pointer;
}
.banner .turnplate canvas.item{width:300px;}
.banner .chance{
    text-align: center;
    margin-top: 10px;
    color: #117d94;
}

/*中奖列表 */
.winning-record{
    float: left;
    margin-left: 90px;
    margin-top: 98px;
    width: 500px;
}
.winning-record .time{
    color:#e0b40d
}
.winning-record div{
    height: 184px;
    overflow: hidden;
    border-radius: 15px;
}
.winning-record table{
    background:rgba(230, 230, 250, 0.7);
    border-radius: 15px;
    overflow: hidden;
}
.winning-record table thead tr{
    background: #ffbe04;
}

.my-prizes-btn{
    text-align: center;
    margin: 20px auto;
}

/*活动奖品展示*/
.prizes-lists ul{
    padding: 10px;
}
.prizes-lists li{
    display: inline-block;
    width: 46.4%;
    margin-bottom: 15px;
    background-color: #fff;
    margin-right: 15px;
    padding: 10px;
}
.prizes-lists li .prize-img{
    width: 144px;
    height: 144px;
    float: left;
}
.prizes-lists li div{
    float: left;
    margin-left: 18px;
    margin-top: 20px;
}
.prizes-lists li .prize-name{
    color: #ffbe04;
    font-size: 19px;
}
.prizes-lists li .count-down{
    font-size: 15px;
    color: #aaa;
}

/*抽奖规则*/
.rules{padding: 10px 20px}
.rules h4{
    line-height: 40px;
    height: 40px;
    color: #ffbe04;
    font-family: '微软雅黑';
    font-weight: normal;
}
.rules P{
    margin-left: 20px;
    line-height: 29px;
    color: #777;
}

/*alert*/
.alert{
    visibility: visible;
    width: 275px;
    opacity: 1;
    height: 316px;
    background-repeat: no-repeat;
    background-size: 100%;
}