<div id="change_password"  class="model_box">
    <div class="control-group" style=" border: none">
        <h5>修改密码</h5>
    </div>
    <div class="control-group">
        <label class="prev_label" for="old_psd">当前密码</label>
        <input class="input_text" id="old_psd" type="password" placeholder="请输入当前密码">
        <span style="font-size: 10px; color: red; display: none">忘记密码？</span>
    </div>
    <div class="control-group">
        <label class="prev_label" for="new_psd">新密码</label>
        <input class="input_text" id="new_psd" type="password" placeholder="设置6位及6位数以上的密码">
    </div>
    <div class="control-group" style="border-bottom: 1px solid #eee">
        <label class="prev_label" for="confirm_psd">确认新密码</label>
        <input class="input_text" id="confirm_psd" type="password"  placeholder="确认新密码">

    </div>
    <div class="control-group">
        <input type="button" class="btn btn-2 btn-link pull-right" id="psd-save" style="padding: 6px 18px" value="保存修改">
    </div>
</div>