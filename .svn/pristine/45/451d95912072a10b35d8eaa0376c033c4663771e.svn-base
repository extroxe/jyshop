<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">系统设置</h1>
</div>
<div class="wrapper-md">
    <div ng-controller="sysCtrl">
        <div class="row">
            <div class="col-sm-8">
                <form name="forma" class="form-horizontal form-validation">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="line line-dashed b-b line-lg pull-in"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">订单预计完成天数设置</label>
                                <div class="col-sm-7">
                                    <input type="number" class="form-control" placeholder="天数设置" ng-model="days" required >
                                </div>
                            </div>
                        </div>
                        <footer class="panel-footer text-right bg-light lter">
                            <button class="btn btn-success" ng-click="save()">保存</button>
                        </footer>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
