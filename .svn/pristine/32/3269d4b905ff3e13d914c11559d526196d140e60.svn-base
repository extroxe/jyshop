.message-wrapper {
    position: relative;
    width: 100%;
    margin: 20px 20px 0 20px;
}

.message-wrapper .nav ul {
    display: flex;
}

.message-wrapper .nav {
    border-bottom: 1px solid rgba(7, 17, 27, 0.3);
}

.message-wrapper .nav .nav-item {
    position: relative;
    top: 1px;
    line-height: 15px;
    font-size: 15px;
    margin-left: 5px;
    border: 1px solid rgba(7, 17, 27, 0.3);
    background: #eee;
}

.message-wrapper .nav .nav-item a {
    display: block;
}

.message-wrapper .nav .nav-item a span{
    display: inline-block;
    margin: 8px 10px;
}

.message-wrapper .nav .nav-item.active {
    font-weight: 700;
    border-bottom: 1px solid #fff;
    background: none;
}

.message-wrapper .post-page {
    position: absolute;
    display: flex;
    width: 100%;
    bottom: 20px;
}

.message-wrapper .post-page .page-wrapper {
    margin: 0 auto;
}

.message-wrapper .post-page .page-wrapper div {
    display: inline-block;
    line-height: 20px;
    font-size: 15px;
    padding: 2px 8px;
    border: 1px solid rgba(7, 17, 27, 0.1);
    border-radius: 2px;
}

.message-wrapper .post-page .page-wrapper div:hover {
    background: rgba(7, 17, 27, 0.1);
}

.message-wrapper .tab-content .tab-pane {
    position: relative;
    flex: 1;
    margin: 20px 20px 0 20px;
    padding-bottom: 80px;
}

.message-wrapper .tab-content .item {
    padding: 10px 5px;
    font-size: 15px;
    line-height: 15px;
    border-bottom: 1px dotted rgba(7, 17, 27, 0.2);
}

.message-wrapper .tab-content .item .content-wrapper {
    display: inline-block;
    width: 640px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    cursor: pointer;
}

.message-wrapper .tab-content .item a {
    margin: 0 2px;
    color: #117d94;
}

.message-wrapper .tab-content .item .item-date {
    float: right;
    font-size: 12px;
    color: rgba(7, 17, 27, 0.4);
}

.message-wrapper .tab-content .item .operated {
    float: right;
    font-size: 12px;
    margin-left: 10px;
    color: rgb(240, 20, 20);
    cursor: pointer;
}

#follow {
    margin: 0;
}

.message-wrapper .tab-content .follow-item {
    display: inline-flex;
    padding: 10px;
    margin: 0 10px 10px 0;
    border: 1px solid rgba(7, 17, 27, 0.2);
}

.message-wrapper .tab-content .follow-item .send-message {
    display: inline-block;
    cursor: pointer;
    width: 50px;
    text-align: right;
}

.message-wrapper .tab-content .follow-avatar {
    width: 50px;
    margin-right: 10px;
}

.message-wrapper .tab-content .follow-avatar img {
    width: 50px;
    height: 50px;
}

.message-wrapper .tab-content .name span {
    line-height: 15px;
    font-size: 15px;
}

.message-wrapper .tab-content .name .username {
    display: inline-block;
    width: 130px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.message-wrapper .tab-content .autograph {
    width: 190px;
}

.message-wrapper .tab-content .autograph .nickname {
    vertical-align: bottom;
    width: 130px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.message-wrapper .tab-content .autograph span {
    display: inline-block;
    line-height: 20px;
    font-size: 12px;
    color: rgba(7, 17, 27, 0.8);
}

#msg {
    display: none;
    width: 80%;
    margin: 50px auto;
}

#msg .content {
    font-size: 15px;
    min-height: 200px;
    color: rgba(7, 17, 27, 0.8);
}

#msg .signature {
    float: right;
    margin-top: 30px;
    font-size: 14px;
    color: rgba(7, 17, 27, 0.8);
}

#msg .signature span {
    display: block;
}

#msg .signature span.time {
    font-size: 12px;
}

#msg .signature span.back {
    text-align: center;
    margin-top: 35px;
    border: 1px solid #117d94;
    width: 60px;
    float: right;
}

#msg .signature span.back:hover {
    background: rgba(7, 17, 27, 0.1);
}

#send {
    display: none;
    width: 80%;
    margin: 50px auto;
}

#send .receive-name {
    font-size: 15px;
    color: rgba(7, 17, 27, 0.8);
}

#send .message-text {
    margin-top: 20px;
    width: 100%;
    min-height: 120px;
}

#send .message-text textarea {
    width: 100%;
    height: 180px;
    border-radius: 0;
}

#send .send-footer {
    float: right;
    margin-top: 25px;
}

#send .send-footer > div {
    display: inline-block;
    cursor: pointer;
}

#send .send-footer .send-btn {
    width: 60px;
    text-align: center;
    border: 1px solid #117d94;
    font-size: 15px;
    line-height: 25px;
    background: #117d94;
    color: #fff;
}

#send .send-footer .back {
    width: 60px;
    text-align: center;
    border: 1px solid #117d94;
    font-size: 15px;
    line-height: 25px;
    margin-right: 20px;
}

.no-inbox,
.no-outbox,
.no-follow
{
    padding: 50px;
    text-align: center;
    font-size: 20px;
    font-family: '黑体';
    display: none;
}
