/*回顶部*/
.back-top{
    position: fixed;
    bottom: 63px;
    right: 10px;
    opacity: 0.8;
}

#my-awards .lists li{
    display: block;
    background-color: #f9f9f9;
    padding: 10px 10px;
    margin-bottom: 10px;
    border-radius: 12px;
    color: #113edc;
    font-size: 18px;
    text-align: center;
}
section{
    position: fixed;
}
.alert label{
    text-align: center;
    font-size: 17px;
    color: #e62d2d;
    font-family: cursive;
    padding: 14px 12px 13px 12px;
}